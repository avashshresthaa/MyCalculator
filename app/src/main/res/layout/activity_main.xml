<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#1C1C1C"
    >
    <TextView
        android:id="@+id/tvInput1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#efefef"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:backgroundTint="#1C1C1C"
        android:text="Calculator"
        android:gravity="center_vertical|top"

        />
    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#efefef"
        android:textSize="48sp"
        android:maxLength="12"
        android:padding="10dp"
        android:textColor="@color/white"
        android:backgroundTint="#1C1C1C"
        android:gravity="right|center_vertical|bottom"

        />

    <!-- Row 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bthSeven"
            android:text="7"
            android:onClick="onDigit"
            android:layout_marginLeft="15dp"
            android:layout_width="80dp"
            android:layout_marginRight="15dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/bthEight"
            android:text="8"
            android:onClick="onDigit"
            android:layout_width="80dp"
            android:layout_marginRight="15dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/bthNine"
            android:text="9"
            android:onClick="onDigit"
            android:layout_width="80dp"
            android:layout_marginRight="15dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/bthDivide"
            android:text="/"
            android:onClick="onOperator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg"
            android:textSize="30dp"
            android:textColor="@color/white"
            />


    </LinearLayout>

    <!-- Row 2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bthFour"
            android:text="4"
            android:onClick="onDigit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <Button
            android:id="@+id/bthFive"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="5"
            android:onClick="onDigit"
            android:layout_marginRight="15dp"
            />

        <Button
            android:id="@+id/bthSix"
            android:text="6"
            android:onClick="onDigit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            />

        <Button
            android:id="@+id/bthMutiple"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:text="*"
            android:onClick="onOperator"
            />





    </LinearLayout>

    <!-- Row 3-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bthOne"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="1"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/bthTwo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:text="2"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/bthThree"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:text="3"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/bthSubtract"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:text="-"
            android:onClick="onOperator"
            />



    </LinearLayout>

    <!-- Row 4-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/bthDecimal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="."
            android:onClick="onDecimalPoint"
            />

        <Button
            android:id="@+id/bthZero"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_num"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:text="0"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/bthClear"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_clr"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:layout_marginRight="15dp"
            android:text="AC"
            android:onClick="onClear"

            />

        <Button
            android:id="@+id/bthAdd"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:text="+"
            android:onClick="onOperator"
            />





    </LinearLayout>

    <!-- Row 5-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="40dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_action_tmb"
            tools:ignore="VectorDrawableCompat"
            android:layout_marginLeft="25dp"
            android:onClick="like"
            />

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/back1"
            tools:ignore="VectorDrawableCompat"
            android:background="@drawable/btn_clr"
            android:layout_marginLeft="138dp"
            android:onClick="onBack"
            android:scaleType="fitCenter"
            />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_bg"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:text="="
            android:onClick="onEqual"
            />


    </LinearLayout>



</LinearLayout>